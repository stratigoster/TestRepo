<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/longitude"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/issue_type"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/err_red"
        android:text="" />

    <TextView
        android:id="@+id/main_road"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/dark_blue"
        android:text="Main Road" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:visibility="visible"
            android:id="@+id/from_road"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="From road AKA" />

        <TextView
            android:visibility="visible"
            android:layout_toRightOf="@id/from_road"
            android:layout_marginLeft="20dp"
            android:id="@+id/to_road"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="BlahBlahBlah" />

        <TextView
            android:visibility="gone"
            android:id="@+id/at_road"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ABCDEFG"
            android:layout_weight="1" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="End Time" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abcd" />

</LinearLayout>